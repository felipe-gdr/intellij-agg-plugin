<idea-plugin>
    <id>com.atlassian.intellijaggplugin</id>
    <name>Nadel Tests</name>
    <vendor>Atlassian</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>org.jetbrains.plugins.gradle</depends>

    <extensions defaultExtensionNs="com.intellij">
        <configurationType
                implementation="com.atlassian.intellijaggplugin.runConfiguration.NadelTestRunConfigurationType"/>

        <!-- Run in context -->
        <runConfigurationProducer
                implementation="com.atlassian.intellijaggplugin.runConfiguration.NadelTestRunConfigurationProducer"/>
    </extensions>

</idea-plugin>
