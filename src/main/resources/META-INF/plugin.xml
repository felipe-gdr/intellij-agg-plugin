<idea-plugin>
    <id>com.github.felipegdr.intellijaggplugin</id>
    <name>intellij-agg-plugin</name>
    <vendor>felipe-gdr</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.felipegdr.intellijaggplugin.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.felipegdr.intellijaggplugin.services.MyProjectService"/>
        <configurationType implementation="com.github.felipegdr.intellijaggplugin.runConfiguration.NadelTestRunConfigurationType"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.felipegdr.intellijaggplugin.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
